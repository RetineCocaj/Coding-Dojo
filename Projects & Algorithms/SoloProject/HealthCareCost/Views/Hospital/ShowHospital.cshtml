@model Hospital
<h2 class="mb-5 ml-2" style="color:#199CA6;">@Model.Name</h2>
<h4 class=" ml-2">Medical Services</h4>
<ul class="list-group col-6 mb-3">
    @foreach (var item in ViewBag.HospitalMedicalProcedures)
    {
        if(item.HospitalId == Model.HospitalId)
        {
            <li class="list-group-item mb-2">@item.MedicalProcedure.Name</li>
        }
    }
</ul>
<h4 class=" ml-2">Contact</h4>
<ul class="list-group col-6">
    <li class="list-group-item mb-2">@Model.Email</li> 
    <li class="list-group-item mb-2">@Model.Telephone</li> 
    <li class="list-group-item mb-2">@Model.Address</li> 
    @if(@Model.Website != null)
    {
        <li class="list-group-item mb-2"><a href="@Model.Website" target="_blank">Go to Website</a></li> 
    }
</ul>