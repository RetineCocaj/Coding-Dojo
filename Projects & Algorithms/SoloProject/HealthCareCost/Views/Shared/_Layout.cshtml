<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthCareCost</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.min.js"
        integrity="sha256-+C0A5Ilqmu4QcSPxrlGpaZxJ04VjsRjKu+G82kl5UJk=" crossorigin="anonymous"></script>
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.bootstrap3.min.css"
        integrity="sha256-ze/OEYGcFbPRmvCnrSeKbRTtjG4vGLHXgOqsyLFTRjg=" crossorigin="anonymous" />
</head>

<body>
    <header>
        <nav class="navbar py-0 text-white d-flex justify-content-end" style="background-color:#199CA6;">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row">
                    <ul class="navbar-nav flex-row flex-grow-1" style="font-size:10pt;">
                        @if (ViewBag.User != null && ViewBag.User.Role == "admin")
                        {
                            <li class="nav-item px-2">
                                <a class="nav-link text-white" asp-controller="MedicalService"
                                asp-action="MedicalServiceForm">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    Add Medical Service
                                </a>
                            </li>
                            <li class="nav-item px-2">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="AllUsers">
                                    <i class="fa fa-users" aria-hidden="true"></i>
                                    See All Users
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav flex-row justify-content-between" style="font-size:10pt;">
                        @{
                            if (ViewBag.User == null)
                            {
                                <li class="nav-item px-2">
                                    <a class="nav-link text-white" asp-controller="Home" asp-action="Login">
                                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                                        Login
                                    </a>
                                </li>
                                <li class="nav-item px-2">
                                    <a class="nav-link text-white" asp-controller="Home" asp-action="Register">
                                        <i class="fa fa-user-plus" aria-hidden="true"></i>
                                        Register
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item px-2">
                                    <a class="nav-link text-white" asp-controller="Home" asp-action="ShowProfile"
                                asp-route-userId="@ViewBag.User.UserId">
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                        @ViewBag.User.FirstName @ViewBag.User.LastName
                                    </a>
                                </li>
                                <li class="nav-item px-2">
                                    <a class="nav-link text-white" asp-controller="Home" asp-action="Logout">
                                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                                        Logout
                                    </a>
                                </li>
                            }
                        }

                    </ul>
                </div>

            </div>

        </nav>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-secondary mr-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa fa-medkit" aria-hidden="true" style="color:#199CA6;"></i>
                    HealthCare<strong class="font-weight-bold" style="color:#199CA6;">Cost</strong>
                    <p class="h6 font-weight-normal">Save on your healthcare costs</p>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-secondary text-uppercase" asp-area="" asp-controller="Home"
                                asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary text-uppercase" asp-area="" asp-controller="MedicalService"
                                asp-action="MedicalServices">Medical Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary text-uppercase" asp-area="" asp-controller="MedicalProcedure"
                                asp-action="MedicalProcedures">Medical Procedures</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary text-uppercase" asp-area="" asp-controller="Hospital"
                                asp-action="Hospitals">Hospitals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary text-uppercase" asp-area="" asp-controller="Specialist"
                                asp-action="Specialists">Specialists</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - HealthCareCost - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
