@{
    ViewData["Title"] = "Home Page";
}
@model Category
<div class="d-flex text-center justify-content-between mb-4">
    <div class="d-flex text-center mx-auto">
        <h1><a href="products">Products</a></h1>
        <div class="border border-dark bg-dark mx-3"></div>
        <h1>Category</h1>
    </div>
</div>
<div class="d-flex justify-content-between">
    <div>
        <h2>New Category</h2>
        <form class="mt-5" method="post" asp-action="CreateCategory" asp-controller="Category">
            <div class="form-group justify-content-between">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name" class="mr-2"></label>
                <br>
                <input asp-for="Name">
            </div>
            <button>Create Category</button>
        </form>
    </div>
    <div class="bg-dark border border-dark" style="margin-left:60px;"></div>
    <div>
        <h2>Existing Categories</h2>
        @{
            foreach(var item in ViewBag.ExistingCategories)
            {
                <p><a asp-action="ShowCategory" asp-controller="Category" asp-route-categoryId="@item.CategoryId">@item.Name</a></p>
            }
        }
    </div>
</div>
