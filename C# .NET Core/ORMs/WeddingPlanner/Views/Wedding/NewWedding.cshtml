@model Wedding
<div class="d-flex justify-content-between">
    <h1>Plan Your Wedding</h1>
    <div>
        <a asp-action="Index" asp-controller="Wedding">Dashboard</a>
        <a asp-action="logout" asp-controller="Home">Logout</a>
    </div>
</div>

<div class="col-md-5">
    <form asp-action="CreateWedding" asp-controller="Wedding" method="POST" class="form-horizontal border border-dark px-3">
        <div class="form-group">
            <label asp-for="Groom" class="control-label col-sm-6"></label>
            <div class="col-sm-12">
                <input asp-for="Groom" class="form-control">
            </div>
            <span asp-validation-for="Groom" class="display-6 text-danger col-sm-6"></span>
        </div>

        <div class="form-group">
            <label asp-for="Bride" class="control-label col-sm-6"></label>
            <div class="col-sm-12">
                <input asp-for="Bride" class="form-control">
            </div>
            <span asp-validation-for="Bride" class="display-6 text-danger col-sm-6"></span>
        </div>

        <div class="form-group">
            <label asp-for="Date" class="control-label col-sm-6"></label>
            <div class="col-sm-12">
                <input asp-for="Date" class="form-control">
            </div>
            <span asp-validation-for="Date" class="display-6 text-danger col-sm-6"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="control-label col-sm-6"></label>
            <div class="col-sm-12">
                <input asp-for="Address" class="form-control">
            </div>
            <span asp-validation-for="Address" class="display-6 text-danger col-sm-6"></span>
        </div>

        <div class="form-group px-3">
            <div>
                <input type="submit" value="Create" class="btn btn-default bg-info text-white">
            </div>
        </div>
    </form>
</div>