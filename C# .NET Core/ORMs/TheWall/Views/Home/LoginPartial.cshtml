@model LoginUser
<form asp-action="Login" asp-controller="Home" method="POST" class="form-horizontal border border-dark px-3">
    <div class="form-group">
        <label asp-for="EmailAttempt" class="control-label col-sm-6"></label>
        <div class="col-sm-12">
            <input asp-for="EmailAttempt" class="form-control">
        </div>
        <span asp-validation-for="EmailAttempt" class="display-6 text-danger col-sm-6"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordAttempt" class="control-label col-sm-6"></label>
        <div class="col-sm-12">
            <input asp-for="PasswordAttempt" class="form-control">
        </div>
        <span asp-validation-for="PasswordAttempt" class="display-6 text-danger col-sm-6"></span>
    </div>

    <div class="form-group px-3">
        <div>
        <input type="submit" value="Login" class="btn btn-default bg-info text-white">
        </div>
    </div>
</form>