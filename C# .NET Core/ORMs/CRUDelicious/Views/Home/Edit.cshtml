@model Dishes
<a asp-controller="Home" asp-action="Index">Home</a>
<h1>Edit @Model.Name</h1>
<form class="col-6" method="post" asp-action="Update" asp-controller="Home" asp-route-dishId="@Model.DishId">
    <div class="form-group">
        <span asp-validation-for="Chef"></span>
        <label asp-for="Chef" class="mr-2"></label>
        <input asp-for="Chef" class="d-flex justify-self-end">
    </div>
    <div class="">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name" class="mr-2"></label>
        <input asp-for="Name" class="d-flex justify-self-end">
    </div>
    <div class="form-group">
        <span asp-validation-for="Tastiness"></span>
        <label asp-for="Tastiness" class="mr-2"></label>
        <select asp-for="Tastiness" class="d-flex justify-self-end">
            @for (var tasty = 1; tasty <= 10; tasty++)
            {
                <option value="@tasty">@tasty</option>
            }
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Calories"></span>
        <label asp-for="Calories" class="mr-2"></label>
        <input asp-for="Calories" class="d-flex justify-self-end">
    </div>
    <div class="form-group">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description" class="mr-2"></label>
        <textarea asp-for="Description" class="d-flex justify-self-end"></textarea>
    </div>
    <button>Edit Dish</button>
</form>