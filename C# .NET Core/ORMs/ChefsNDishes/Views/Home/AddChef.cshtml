@model Chef
<a asp-controller="Home" asp-action="Index">Home</a>
<h1 class="text-center">Add a Chef!</h1>

<form class="d-flex col-8 offset-2 justify-content-between mt-5" method="post" asp-action="ChefAdded" asp-controller="Home">
    <div>
        <div class="form-group justify-content-between">
            <span asp-validation-for="FirstName"></span>
            <label asp-for="FirstName" class="mr-2"></label>
            <br>
            <input asp-for="FirstName">
        </div>
        <div class="form-group justify-content-between">
            <span asp-validation-for="LastName"></span>
            <label asp-for="LastName" class="mr-2"></label>
            <br>
            <input asp-for="LastName">
        </div>
    </div>
    <div>
        <div class="form-group justify-content-between">
            <span asp-validation-for="DateOfBirth"></span>
            <label asp-for="DateOfBirth" class="mr-2"></label>
            <br>
            <input asp-for="DateOfBirth">
        </div>
        <button class="mt-4">Add Chef</button>
    </div>

</form>
