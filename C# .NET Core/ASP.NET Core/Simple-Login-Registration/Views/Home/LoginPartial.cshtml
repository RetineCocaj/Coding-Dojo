@model LogUser
<form asp-action="Login" asp-controller="Home" method="POST" class="form-horizontal border border-dark px-3">
    <div class="form-group">
        <label asp-for="LoginEmail" class="control-label col-sm-6"></label>
        <div class="col-sm-12">
            <input asp-for="LoginEmail" class="form-control">
        </div>
        <span asp-validation-for="LoginEmail" class="display-6 text-danger col-sm-6"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoginPassword" class="control-label col-sm-6"></label>
        <div class="col-sm-12">
            <input asp-for="LoginPassword" class="form-control">
        </div>
        <span asp-validation-for="LoginPassword" class="display-6 text-danger col-sm-6"></span>
    </div>

    <div class="form-group px-3">
        <div>
        <input type="submit" value="Submit" class="btn btn-default bg-info text-white">
        </div>
    </div>
</form>