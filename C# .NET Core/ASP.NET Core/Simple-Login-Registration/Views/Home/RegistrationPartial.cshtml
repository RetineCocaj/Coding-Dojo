@model RegUser
<form asp-action="Registration" asp-controller="Home" method="POST" class="form-horizontal border border-dark px-3">
    <div class="form-group">
        <label asp-for="FirstName" class="control-label col-sm-6"></label>
        <div class="col-sm-12">
            <input asp-for="FirstName" class="form-control">
        </div>
        <span asp-validation-for="FirstName" class="display-6 text-danger col-sm-6"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label col-sm-6"></label>
        <div class="col-sm-12">
            <input asp-for="LastName" class="form-control">
        </div>
        <span asp-validation-for="LastName" class="display-6 text-danger col-sm-6"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label col-sm-6"></label>
        <div class="col-sm-12">
            <input asp-for="Email" class="form-control">
        </div>
        <span asp-validation-for="Email" class="display-6 text-danger col-sm-6"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="control-label col-sm-6"></label>
        <div class="col-sm-12">
            <input asp-for="Password" class="form-control">
        </div>
        <span asp-validation-for="Password" class="display-6 text-danger col-sm-6"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label col-sm-6"></label>
        <div class="col-sm-12">
            <input asp-for="ConfirmPassword" class="form-control">
        </div>
        <span asp-validation-for="ConfirmPassword" class="display-6 text-danger col-sm-6"></span>
    </div>

    <div class="form-group px-3">
        <div>
        <input type="submit" value="Submit" class="btn btn-default bg-info text-white">
        </div>
    </div>
</form>