@{
    ViewData["Title"] = "Home Page";
}
@model User
<form asp-action="AddUser" asp-controller="Home" method="POST" class="form-horizontal border border-dark  p-5">
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <div>
            <input asp-for="FirstName" class="form-control">
        </div>
        <span asp-validation-for="FirstName" class="display-6 text-danger "></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label "></label>
        <div>
            <input asp-for="LastName" class="form-control">
        </div>
        <span asp-validation-for="LastName" class="display-6 text-danger "></span>
    </div>

    <div class="form-group">
        <label asp-for="Age" class="control-label "></label>
        <div>
            <input asp-for="Age" class="form-control">
        </div>
        <span asp-validation-for="Age" class="display-6 text-danger "></span>
    </div>

    <div class="form-group">
        <label asp-for="EmailAddress" class="control-label "></label>
        <div>
            <input asp-for="EmailAddress" class="form-control">
        </div>
        <span asp-validation-for="EmailAddress" class="display-6 text-danger "></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="control-label "></label>
        <div>
            <input asp-for="Password" class="form-control">
        </div>
        <span asp-validation-for="Password" class="display-6 text-danger "></span>
    </div>

    <div class="form-group">
        <div>
        <input type="submit" value="Submit" class="btn btn-default bg-info text-white">
        </div>
    </div>
</form>